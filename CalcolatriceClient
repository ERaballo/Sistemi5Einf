import java.io.*;
import java.net.*;
import java.util.Scanner;

public class CalcolatriceClient {
    private static final String HOST = "localhost";
    private static final int PORTA = 8844;

    public static void main(String[] args) {

        System.out.println("CLIENT CALCOLATRICE REMOTA ");
        System.out.println("Lavoro di Enrico Raballo ");

        try (Socket socket = new Socket(HOST, PORTA);
             PrintWriter out = new PrintWriter(socket.getOutputStream(), true);
             BufferedReader in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
             Scanner scanner = new Scanner(System.in)) {

            System.out.println("Connessione stabilita con il server!");
            System.out.println("Formato operazione: NUMERO OPERAZIONE NUMERO");
            System.out.println("Esempi: 10 + 5 | 20 / 4 | 7 * 3");
            System.out.println("Scrivi 'quit' per uscire");

            while (true) {
                System.out.print("Calcolo > ");
                String input = scanner.nextLine();

                if (input.equalsIgnoreCase("quit")) {
                    out.println("QUIT");
                    System.out.println(in.readLine());
                    System.out.println("Disconnessione...");
                    break;
                }

                out.println(input);

                String risposta = in.readLine();
                if (risposta == null) {
                    System.out.println("Server disconnesso.");
                    break;
                }

                System.out.println(risposta);
            }

        } catch (IOException e) {
            System.err.println("Errore connessione client: " + e.getMessage());
        }

        System.out.println("Client terminato.");
    }
}
